<p id="notice"><%= notice %></p>

<h1>Snakes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sci name</th>
      <th>Picture</th>
      <th>Venomous</th>
      <th>Max length</th>
      <th>Diet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snakes.each do |snake| %>
      <tr>
        <td><%= snake.name %></td>
        <td><%= snake.sci_name %></td>
        <td><%= snake.picture %></td>
        <td><%= snake.venomous %></td>
        <td><%= snake.max_length %></td>
        <td><%= snake.diet %></td>
        <td><%= link_to 'Show', snake %></td>
        <td><%= link_to 'Edit', edit_snake_path(snake) %></td>
        <td><%= link_to 'Destroy', snake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

